<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@mipmap/ic_me_savecard_item_bga"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ri_me_save_card_not_item_title_oc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ri_me_save_card_not_item_cardsn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NO:YF00000023"
            android:textColor="#5a3e27"
            android:textSize="10sp" />

        <TextView

            android:id="@+id/ri_me_save_card_not_item_vc_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="面值：0.00"
            android:textColor="#5a3e27"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right">


            <TextView
                android:id="@+id/ri_me_save_card_not_item_invalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_me_savecard_invalid_item_bga"
                android:gravity="center"
                android:padding="3dp"
                android:text="已过期"
                android:textColor="#ffffff"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/ri_me_save_card_not_item_cardtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ri_me_save_card_not_item_title_oc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="礼品卡"
        android:textColor="#5a3e27"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ri_me_save_card_not_item_cardtype"
        android:layout_marginLeft="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/ri_me_save_card_not_item_card_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="余额￥500"
            android:textColor="#5a3e27"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="#5a3e27"
            android:textSize="10sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/ri_me_save_card_not_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="过期时间：2018年6月25日 14：23"
        android:textColor="#5a3e27"
        android:textSize="10sp" />


</RelativeLayout>
