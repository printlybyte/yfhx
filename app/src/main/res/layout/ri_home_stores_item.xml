<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ri_home_nav_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ri_home_stores_item_group"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp239"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginBottom="@dimen/dp12"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ri_home_stores_item_shop_icon"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_marginStart="@dimen/dp12"
                android:layout_marginEnd="@dimen/dp6"
                android:scaleType="centerCrop"
                android:background="#eee"
                android:src="@mipmap/ic_svg_glide_photo_placeholder" />

            <LinearLayout
                android:id="@+id/ri_home_stores_item_title_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:orientation="vertical">

                <TextView
                    android:singleLine="true"

                    android:id="@+id/ri_home_stores_item_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp24"
                    android:text="@string/str_brandname"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:singleLine="true"

                    android:id="@+id/ri_home_stores_item_shop_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp14"
                    android:text="@string/str_branddesc"
                    android:textColor="@color/c999999"
                    android:textSize="@dimen/sp12" />

            </LinearLayout>

        </LinearLayout>


        <!--pic-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginEnd="@dimen/dp12"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ri_home_stores_item_mark_group1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ri_home_stores_item_mark_img1"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp100"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_svg_glide_photo_placeholder" />

                <TextView
                    android:singleLine="true"
                    android:id="@+id/ri_home_stores_item_mark_name1"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp28"
                    android:gravity="center_horizontal"
                    android:text="@string/str_productname"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/ri_home_stores_item_mark_peice1"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp24"
                    android:gravity="center_horizontal"
                    android:text="￥70.00"
                    android:textColor="@color/cc10000"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:id="@+id/ri_home_stores_item_mark_group2"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ri_home_stores_item_mark_img2"
                    android:layout_width="@dimen/dp100"

                    android:layout_height="@dimen/dp100"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_svg_glide_photo_placeholder" />

                <TextView
                    android:singleLine="true"

                    android:id="@+id/ri_home_stores_item_mark_name2"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp28"
                    android:gravity="center_horizontal"
                    android:text="@string/str_productname"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/ri_home_stores_item_mark_price2"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp24"
                    android:gravity="center_horizontal"
                    android:text="￥70.00"
                    android:textColor="@color/cc10000"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:id="@+id/ri_home_stores_item_mark_group3"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ri_home_stores_item_mark_img3"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp100"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_svg_glide_photo_placeholder" />

                <TextView
                    android:singleLine="true"

                    android:id="@+id/ri_home_stores_item_mark_name3"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp28"
                    android:gravity="center_horizontal"
                    android:text="@string/str_productname"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/ri_home_stores_item_mark_price3"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp24"
                    android:gravity="center_horizontal"
                    android:text="￥70.00"
                    android:textColor="@color/cc10000"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp12" />

        <View
            android:id="@+id/divide_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/ceeeeee" />
    </LinearLayout>


    <View
        android:id="@+id/block_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp12"
        android:background="@color/ceeeeee" />

</LinearLayout>