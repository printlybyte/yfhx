<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutScrollNews"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp66"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp6"
        android:background="@color/ceeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp54"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp24"
            android:layout_marginEnd="@dimen/dp12"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_home_notice_icon" />

        <com.lgd.lgd_core.ui.marqueenview.AutoVerticalViewView
            android:id="@+id/item_fragment_tab1_notice_layout_sview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp24" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp6"
        android:background="@color/ceeeeee" />
</LinearLayout>
