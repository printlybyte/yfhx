<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">


    <include layout="@layout/include_actionbar_back" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/activity_daipingjia_details_btn"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">




                    <LinearLayout
                        android:paddingTop="10dp"
                        android:id="@+id/ri_daipingjiadetails_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingBottom="5dp">


                        <ImageView
                            android:id="@+id/ri_daipingjiadetails_goods_img"
                            android:layout_width="@dimen/dp66"
                            android:layout_height="@dimen/dp66"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_shopcar_img_bga"
                            android:padding="0.5dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/ri_daipingjiadetails_goods_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:maxLength="15"
                                android:text="得力大铅笔盒"
                                android:textColor="@color/c464646"
                                android:textSize="@dimen/sp12" />

                            <TextView
                                android:id="@+id/ri_daipingjiadetails_price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="黑色"
                                android:textColor="#c84d4f"
                                android:textSize="10dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:paddingRight="20dp">

                            <TextView
                                android:id="@+id/ri_daipingjiadetails_goods_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="￥25.00"
                                android:textColor="#c84d4f"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/ri_daipingjiadetails_goods_nums"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="X1"
                                android:textColor="#949494"
                                android:textSize="9sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="left"
                            android:text="评价"
                            android:textColor="#595959"
                            android:textSize="11sp" />

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/activity_daipingjia_details_ratingbar"
                            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:stepSize="0.01" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/activity_daipingjia_details_input"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@null"
                            android:gravity="start"
                            android:hint="产品质量如何？大小合适吗？快写下你的评价！（0-100字）"
                            android:padding="@dimen/dp10"
                            android:textColor="#464646"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="图片信息"
                                android:textColor="#464646"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                                android:id="@+id/snpl_moment_add_photos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                                app:bga_snpl_deleteDrawableOverlapQuarter="false"
                                app:bga_snpl_editable="true"
                                app:bga_snpl_itemCornerRadius="0dp"
                                app:bga_snpl_itemSpanCount="3"
                                app:bga_snpl_itemWhiteSpacing="4dp"
                                app:bga_snpl_itemWidth="0dp"
                                app:bga_snpl_maxItemCount="9"
                                app:bga_snpl_otherWhiteSpacing="100dp"
                                app:bga_snpl_placeholderDrawable="@mipmap/bga_pp_ic_holder_light"
                                app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                                app:bga_snpl_plusEnable="true"
                                app:bga_snpl_sortable="true" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <TextView
                android:id="@+id/activity_daipingjia_details_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_calculation_btn_yes_bga"
                android:gravity="center"
                android:text="提交申请"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </RelativeLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>