<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:id="@+id/ri_shop_categray_item_group"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
             android:orientation="vertical">


            <ImageView
                android:id="@+id/ri_shop_categray_item_img"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/ri_shop_categray_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/c_3333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ri_shop_categray_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:text="@string/str_ssbm"
                android:textColor="@color/c_text_red"
                android:textSize="13sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>