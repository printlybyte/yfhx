<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <LinearLayout
        android:id="@+id/ri_me_celled_storge_item_group"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ri_me_celled_storge_item_shop_logo"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_svg_glide_photo_placeholder" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/ri_me_celled_storge_item_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|bottom"
                android:singleLine="true"
                android:text="格力电器期旗舰店"
                android:textColor="#333333"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ri_me_celled_storge_item_area_link"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="1.1万粉丝"
                android:textColor="#7a7a7a"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ri_me_celled_storge_item_attention"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_details_attention_cencel" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>