<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ri_home_nav_item_group"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp102"
        android:gravity="center_vertical"
        android:clickable="true"
        android:id="@+id/ri_home_newgoods_item_group"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ri_home_newgoods_item_header"
            android:layout_width="@dimen/dp78"
            android:layout_height="@dimen/dp78"
            android:layout_margin="@dimen/dp12"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_svg_glide_photo_placeholder" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp78"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ri_home_newgoods_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp12"
                android:maxHeight="@dimen/dp24"
                android:maxLines="2"
                android:text="台湾 古蒂迷你小黑饼干夹心饼干v好吃不贵松软可口600g/袋"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/ri_home_newgoods_item_buy_nums"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp14"
                android:layout_below="@id/ri_home_newgoods_item_name"
                android:text="1899人购买"
                android:textColor="@color/ccccccc"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/ri_home_newgoods_item_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentBottom="true"
                android:text="￥70.00"
                android:textColor="@color/cc10000"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ri_home_newgoods_item_price_old"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp18"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp6"
                android:layout_toEndOf="@id/ri_home_newgoods_item_price"
                android:text="￥99.00"
                android:textColor="@color/ccccccc"
                android:textSize="@dimen/sp12" />

            <ImageView
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/ri_home_newgoods_item_add_shop"
                android:layout_width="@dimen/dp28"
                android:layout_height="@dimen/dp28"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/dp12"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_home_gouwuche"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/divide_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/ceeeeee" />

</LinearLayout>