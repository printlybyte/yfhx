<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="27dp"
    android:layout_marginRight="20dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ri_shop_coupon_item_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp20">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:singleLine="true"

                    android:id="@+id/ri_shop_coupon_item_cou_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="￥25.00"
                    android:textColor="#c84d4f"
                    android:textSize="16sp" />

                <TextView
                    android:singleLine="true"

                    android:id="@+id/ri_shop_coupon_item_cou_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ri_shop_coupon_item_cou_money"
                    android:gravity="left"
                    android:text="满100元可用"
                    android:textColor="#464646"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:singleLine="true"

                    android:id="@+id/ri_shop_coupon_item_cou_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="格力电器优惠券"
                    android:textColor="#9c9c9c"
                    android:textSize="11sp" />


                <TextView
                    android:singleLine="true"
                    android:id="@+id/ri_shop_coupon_item_cou_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="2019.4.1至2019.5.1"
                    android:textColor="#9c9c9c"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/ri_shop_coupon_item_btn"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_shop_coupon_jc_bga"
            android:gravity="center"
            android:text="立即领取"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>