<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ri_daishouhuo_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ri_daishouhuo_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="得力文具店"
            android:textColor="#464646"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ri_daishouhuo_item_order_status"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:text="未确认 未付款 未发货"
            android:textColor="#c84d4f"
            android:textSize="13sp" />
    </LinearLayout>

    <View style="@style/singleLine_h" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ri_daishouhuo_item_order_sn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="订单号："
            android:textColor="#464646"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ri_daishouhuo_item_order_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="top"
            android:text="下单时间：2019-05-13 11：40：56"
            android:textColor="#cfcfcf"
            android:textSize="11sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ri_order_item_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:overScrollMode="never"></android.support.v7.widget.RecyclerView>


    <View style="@style/singleLine_h" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ri_daishouhuo_item_total_nums"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="共1件商品，合计： "
            android:textColor="#949494"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ri_daishouhuo_item_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="25dp"
            android:text="￥25.00"
            android:textColor="#c84d4f"
            android:textSize="9sp" />

    </LinearLayout>


