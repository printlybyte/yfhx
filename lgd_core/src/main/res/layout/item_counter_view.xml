<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:padding="1dp"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:background="@drawable/inc_dec_counter_view_background"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageButton
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/dec_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/inc_dec_counter_view_button_background"
        android:src="@mipmap/ic_remove" />

    <TextView
        android:id="@+id/item_counter_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="1"
        android:gravity="center"
        android:textColor="#464646"
        android:textSize="12sp"
        android:background="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
       />

    <ImageButton
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/inc_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:background="@drawable/inc_dec_counter_view_button_background"
        android:src="@mipmap/ic_add" />
</LinearLayout>